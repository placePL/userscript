{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "target": "es5",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": false,
        "jsx": "react",
        "module": "es6",
        "typeRoots": [
            "./types",
            "./node_modules/@types",
            "./typings.d.ts"
